import karpty;

script main {
	karpty.load_presence();
	if karpty.status == .RUNNING {
		msg("Karpty ya está corriendo, por favor espera...");
		pause_with_time(10 * SEGS);
	} else {
		msg("Karpty ha encontrado problemas, saliendo...");
		return;
	}
}

